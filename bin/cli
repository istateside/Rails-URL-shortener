puts "Input your email:"
email = gets.chomp
user = User.find_by_email(email)

begin
  puts "What do you want to do?"
  puts "0. Create shortened URL"
  puts "1. Visit shortened URL"
  input = gets.chomp.to_i

  if input == 0
    puts "Type in your long URL"
    long_url = gets.chomp

    short_url = ShortenedUrl.create_for_user_and_long_url!(user, long_url)
    puts "Short url is: #{short_url.short_url}"
  elsif input == 1
    puts "Type in your shortened URL"
    shortened_url = gets.chomp
    puts shortened_url
    long_url = ShortenedUrl.find_by_short_url(shortened_url).long_url
    Launchy.open("#{long_url}")
  else
    #raise
  end
  #rescue
  #retry
end


